<AuthorizeView>
    <Authorized>
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="" class="nav-link">Bienvenido/da @context.User.Identity.Name</a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
            @*Perfil de lusuario*@
            <li class="nav-item dropdown show">
                <a class="nav-link" data-toggle="dropdown" href="#" aria-expanded="true">
                    <i class="far fa-user"></i>
                    <span class="badge badge-danger navbar-badge"></span>
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right" style="left: inherit; right: 0px;">
                    <a href="/Manage/MiCuenta" class="dropdown-item">
                        <!-- Message Start -->
                        <div class="media">
                            <img src="/AdminLTE/dist/img/avatar.png" alt="User Avatar" class="img-size-50 mr-3 img-circle">
                            <div class="media-body">
                                <h3 class="dropdown-item-title">
                                    @context.User.Identity.Name
                                </h3>
                                <p class="text-md">Usuario</p>
                            </div>
                        </div>
                        <!-- Message End -->
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="/Manage/MiCuenta" class="dropdown-item dropdown-footer">
                        Mi Cuenta
                    </a>

                    <div class="dropdown-divider"></div>
                    <form action="Identity/Account/LogOut" method="post">
                        <div class="text-center">
                            <button class="btn col-sm-12" type="submit"> Salir </button>
                        </div>
                    </form>
                </div>
            </li>
        </ul>

        <form class="form-inline" action="Identity/Account/LogOut" method="post">
            <div class="input-group input-group-sm">
                <button class="btn" type="submit">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </div>
        </form>
        </nav>
    </Authorized>
    <NotAuthorized>
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="" class="nav-link">Es necesario iniciar sesión</a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
            <li class="nav-item d-none d-sm-inline-block">
                <a href="Identity/Account/Register" class="nav-link">Registrarse</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="Identity/Account/Login" class="nav-link">Entrar</a>
            </li>
        </ul>
        </nav>
    </NotAuthorized>
</AuthorizeView>

