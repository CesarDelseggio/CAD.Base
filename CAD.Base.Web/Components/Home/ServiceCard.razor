<div class="@Class pt-3">
    <div class="row m-2 p-5">
        <div class="col-12 col-sm-6 d-flex flex-wrap align-items-center justify-content-center @FloatImage">
            <img src=@ImageSorce/>
        </div>
        <div class="col-12 col-sm-6">
            <h3><strong>@Title</strong></h3>
            <hr/>   
            <p>@Detail</p>        
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Class { get; set; }
    [Parameter]
    public string ImageSorce { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Detail { get; set; }
    [Parameter]
    public bool ImageFloatRight { get; set; }

    private string FloatImage { get; set; }


    protected override Task OnInitializedAsync()
    {
        FloatImage = (ImageFloatRight) ? "order-last" : "";
        
        return base.OnInitializedAsync();
    }

}
